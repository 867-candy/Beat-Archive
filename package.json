{
  "name": "beat-archive",
  "version": "1.2.0",
  "description": "beatorajaスコア分析ツール",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "debug": "set NODE_ENV=development && electron . --inspect=5858",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "dist": "npm run build",
    "package": "electron-packager . --platform=win32 --arch=x64 --out=dist --icon=app.ico --overwrite --ignore=\"sample-db|config.json|local-data.db|debug|test|testdata|src/debug\" --executable-name=\"Beat-Archive\"",
    "version:patch": "npm version patch && git push origin main && git push origin --tags",
    "version:minor": "npm version minor && git push origin main && git push origin --tags",
    "version:major": "npm version major && git push origin main && git push origin --tags",
    "release": "npm run build && npm run version:patch"
  },
  "keywords": [
    "beatoraja",
    "score",
    "analysis"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "dayjs": "^1.11.13",
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.1",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12"
  },
  "build": {
    "appId": "com.beat-archive.app",
    "productName": "Beat Archive",
    "icon": "app.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/preload.js",
      "src/windows/**/*",
      "src/common/**/*",
      "config-build.json",
      "app.ico",
      "node_modules/**/*",
      "!readme-assets",
      "!sample-db",
      "!debug",
      "!test",
      "!testdata",
      "!src/debug"
    ],
    "win": {
      "icon": "app.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
